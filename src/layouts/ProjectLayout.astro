---
import Layout, { type Props as DefaultProps } from "./Layout.astro";
import Heading from "../components/common/Heading.astro";

type Props = DefaultProps & {
    header: string | undefined;
};

const { header, ...default_props } = Astro.props;

---

<Layout { ...default_props }>
    <main>
        <Heading>{header}</Heading>
        <slot></slot>
    </main>
</Layout>


<style is:global>
    main {
        padding-bottom: 96px;
    }
    p {
        text-align: left;
        font-family: "Josefin Sans";
        font-size: 24px;
        font-style: normal;
        font-weight: 400;
        line-height: normal;
        width: clamp(300px, 40%, 1024px);
        margin: 0 auto;
        margin-bottom: 1.5em;
    }
    h2 {
        text-align: left;
        font-family: "Josefin Sans";
        font-size: 32px;
        font-style: normal;
        font-weight: 600;
        line-height: normal;
        width: clamp(300px, 40%, 1024px);
        margin-left: auto;
        margin-right: auto;
    }
</style>